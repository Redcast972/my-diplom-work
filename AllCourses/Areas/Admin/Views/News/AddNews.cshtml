@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Создание новости";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h1 class="text-3xl font-bold text-indigo-600 mb-6">Создание новости</h1>
    <form action="/admin/news/addnews" method="post" enctype="multipart/form-data" class="space-y-6 bg-white p-8 rounded-lg shadow-md">
        <div>
            <label for="title" class="block text-xl font-medium text-gray-700">Заголовок</label>
            <input type="text" id="title" name="title" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" required />
        </div>

        <div>
            <label for="content" class="block text-xl font-medium text-gray-700">Контент</label>
            <textarea id="content" name="content" rows="6" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" required></textarea>
        </div>

        <div class="flex flex-col space-y-2">
            <label for="image" class="block text-xl font-medium text-gray-700">Прикрепить фотографию</label>
            <label for="image" class="cursor-pointer px-4 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-md w-auto text-center">
                Выбрать изображение
                <input type="file" id="image" name="image" class="hidden" onchange="updateFileName()" />
            </label>
            <p id="file-name" class="text-sm text-gray-500 mt-2"></p>
        </div>

        <div class="flex justify-between">
            <a href="/news" class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-md">
                Отменить
            </a>
            <button type="submit" class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md shadow-md">
                Создать
            </button>
        </div>
    </form>
</div>

<script>
    function updateFileName() {
        const fileInput = document.getElementById('image');
        const fileName = document.getElementById('file-name');
        if (fileInput.files.length > 0) {
            fileName.textContent = `Выбран файл: ${fileInput.files[0].name}`;
        } else {
            fileName.textContent = '';
        }
    }
</script>