@using AllCourses.Models
@model RegisterViewModel; 
@{
    Layout = null;
}

<link href="~/css/output.css" rel="stylesheet" />
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 to-gray-50">
    <div class="max-w-md w-full bg-white shadow-lg rounded-2xl p-8 space-y-8 transform transition-all hover:shadow-2xl">
        <h2 class="text-center text-3xl font-extrabold text-gray-900">
            Регистрация
        </h2>
        <form asp-controller="Account" asp-action="Register" method="post" class="mt-8 space-y-6">
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700">
                        Логин
                    </label>
                    <input asp-for="UserName" type="text" 
                           class="appearance-none rounded-lg block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="Логин" />
                    <span class="text-red-600" asp-validation-for="UserName"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                        Электронная почта
                    </label>
                    <input asp-for="Email" type="email" 
                           class="appearance-none rounded-lg block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="Электронная почта" />
                    <span class="text-red-600" asp-validation-for="Email"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">
                        Пароль
                    </label>
                    <input asp-for="Password" type="password" 
                           class="appearance-none rounded-lg block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="Пароль" />
                    <span class="text-red-600" asp-validation-for="Password"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                        Подтвердите пароль
                    </label>
                    <input asp-for="ConfirmPassword" type="password" 
                           class="appearance-none rounded-lg block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                           placeholder="Подтвердите пароль" />
                    <span class="text-red-600" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div>
                <button type="submit"
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 ease-in-out">
                    Зарегистрироваться
                </button>
            </div>
        </form>
        <p class="mt-2 text-center text-sm text-gray-600">
            Уже есть аккаунт?
            <a asp-controller="Account" asp-action="Login" class="font-medium text-indigo-600 hover:text-indigo-500">
                Войти
            </a>
        </p>
    </div>
</div>
