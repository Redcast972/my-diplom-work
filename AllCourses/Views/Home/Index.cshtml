@using AllCourses.Models.News
@model List<NewsViewModel>
@{
    Layout = "_Layout"; // Set your layout file here
    ViewData["Title"] = "Главная";
}

<div class="min-h-screen flex flex-col">
    <!-- Главный раздел -->
    <header class="flex-1 flex items-center justify-center text-center p-8">
        <div class="max-w-4xl">
            <h1 class="text-5xl font-extrabold text-gray-900 leading-tight">
                Откройте свой потенциал с <span class="text-indigo-600">AllCourses</span>
            </h1>
            <p class="mt-4 text-lg text-gray-600">
                Осваивайте новые навыки, достигайте целей и становитесь частью сообщества обучающихся.
            </p>
            <div class="mt-8 space-x-4">
                <a href="/courses" class="px-6 py-3 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow-lg text-lg font-medium transition-all duration-300">
                    Исследовать курсы
                </a>
                <a href="/about" class="px-6 py-3 text-indigo-600 bg-white hover:bg-indigo-100 rounded-lg shadow-lg text-lg font-medium border border-indigo-600 transition-all duration-300">
                    Узнать больше
                </a>
            </div>
        </div>
    </header>

    <!-- Избранные курсы -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 text-center">
                Популярные курсы
            </h2>

            <div class="mt-10 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                @for (int i = 1; i <= 6; i++)
                {
                    <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                        <h3 class="text-xl font-bold text-gray-900">Название курса @i</h3>
                        <p class="mt-2 text-gray-600">
                            Краткий обзор того, что предлагает этот курс и как он может быть вам полезен.
                        </p>
                        <div class="mt-4">
                            <a href="/courses/course-@i" class="text-indigo-600 hover:text-indigo-500 font-medium">
                                Узнать больше &rarr;
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Раздел отзывов -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 text-center">
                Что говорят наши ученики
            </h2>
            <div class="mt-10 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="bg-white rounded-lg shadow-lg p-6">
                        <blockquote class="text-gray-600 italic">
                            "Эта платформа изменила мой подход к обучению. Курсы увлекательные, а сообщество поддерживающее!"
                        </blockquote>
                        <p class="mt-4 font-bold text-gray-900">- Ученик @i</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Раздел часто задаваемых вопросов -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 text-center">
                Часто задаваемые вопросы
            </h2>
            <div class="mt-8 space-y-4">
                @foreach (var faq in new[]
                {
                new { question = "Как зарегистрироваться?", answer = "Чтобы зарегистрироваться, нажмите на кнопку 'Регистрация' в верхнем меню." },
                new { question = "Как начать учиться?", answer = "Просто выберите курс на главной странице и зарегистрируйтесь для начала." },
                new { question = "Как получить сертификат?", answer = "После завершения курса, вам будет выдан сертификат, который можно скачать." }
                })
                {
                    <details class="bg-white p-4 rounded-lg group shadow-lg">
                        <summary class="font-semibold text-lg text-gray-900 cursor-pointer">
                            @faq.question
                        </summary>
                        <p class="mt-2 text-gray-600 group-open:max-h-screen max-h-0 overflow-hidden transition-all duration-700 ease-in-out opacity-0 group-open:opacity-100">
                            @faq.answer
                        </p>
                    </details>
                }
            </div>
        </div>
    </section>

    <!-- Раздел новостей -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 text-center">
                Последние новости
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 mt-6">
                <!-- Две карточки в ряд начиная с sm -->
                @foreach (var news in Model)
                {
                    <a href="@Url.Action("Details", "News", new { id = news.Id })" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-all">
                        <div class="relative">
                            @if (news.ImageData != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(news.ImageData)" alt="Новость" class="rounded-lg shadow-md w-20 h-48 object-cover" />
                            }
                            else
                            {
                                <p class="text-gray-500 mt-2">Нет изображения</p>
                            }
                        </div>
                        <div class="mt-4">
                            <h2 class="text-xl font-semibold text-gray-800 truncate">@news.Title</h2>
                            <p class="text-sm text-gray-500 mt-2">@news.CreatedAt.ToString("dd.MM.yyyy")</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </section>
</div>