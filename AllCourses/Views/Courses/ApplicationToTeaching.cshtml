@using AllCourses.Models.Courses
@{
    Layout = "_Layout";
    ViewData["Title"] = "Просмотр заявки";
}
@model ApplicationToTeachingViewModel;

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h1 class="text-3xl font-bold text-600 mb-6">Просмотр заявки</h1>
    <div class="space-y-6 bg-white p-8 rounded-lg shadow-md">
        <div>
            <label asp-for="Id" class="block text-xl font-medium text-gray-700">Id заявки</label>
            <input asp-for="Id" type="text" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly />
        </div>

        <div>
            <label asp-for="UserName" class="block text-xl font-medium text-gray-700">Имя пользователя</label>
            <input asp-for="UserName" type="text" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly />
        </div>

        <div>
            <label asp-for="UserEmail" class="block text-xl font-medium text-gray-700">Почта пользователя</label>
            <input asp-for="UserEmail" type="text" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly />
        </div>

        <div>
            <label asp-for="CreatedAt" class="block text-xl font-medium text-gray-700">Описание</label>
            <input asp-for="CreatedAt" type="text" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly />
        </div>

        <div>
            <label asp-for="Description" class="block text-xl font-medium text-gray-700">Дата создания заявки</label>
            <textarea asp-for="Description" rows="4" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly></textarea>
        </div>

        <div>
            <label asp-for="Status" class="block text-xl font-medium text-gray-700">Статус заявки</label>
            <input asp-for="Status" type="text" class="mt-2 px-4 py-2 w-full border border-gray-300 rounded-md bg-gray-100" readonly />
        </div>

        <div class="flex justify-end space-x-4">
            <a href="#" class="px-6 py-2 text-white bg-red-600 hover:bg-red-700 rounded-md shadow-md">
                Отклонить
            </a>
            <a href="#" class="px-6 py-2 text-white bg-green-600 hover:bg-green-700 rounded-md shadow-md">
                Принять
            </a>
        </div>
    </div>
</div>
