@using Hexagon.Models.News
@model List<NewsViewModel>
@{
    Layout = "_Layout"; // Set your layout file here
    ViewData["Title"] = "Главная";
}

<div class="min-h-screen flex flex-col bg-gradient bg-blur text-gray-900">
    <!-- Главный раздел -->
    <header class="flex-1 flex items-center justify-center text-center p-8">
        <div class="max-w-4xl">
            <h1 class="text-5xl font-extrabold text-gray-200 leading-tight">
                Откройте свой потенциал с <span class="bg-accent-pink bg-clip-text text-transparent">Hexagon</span>
            </h1>
            <p class="mt-4 text-lg text-gray-200">
                Осваивайте новые навыки, достигайте целей и становитесь частью сообщества обучающихся.
            </p>
            <div class="mt-8 space-x-4">
                <a href="/courses" class="px-6 py-3 text-white bg-accent-pink hover: bg-accent-pink rounded-lg shadow-lg text-lg font-medium transition-all duration-300">
                    Исследовать курсы
                </a>
                <a href="/about" class="px-6 py-3 text-white bg-accent-pink hover: bg-accent-pink rounded-lg shadow-lg text-lg font-medium transition-all duration-300">
                    Узнать больше
                </a>
            </div>
        </div>
    </header>

    <!-- Избранные курсы -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-accent-pink text-center">
                Популярные курсы
            </h2>

            <div class="mt-10 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по Python</h3>
                    <p class="mt-2 text-gray-200">
                        Изучите основы Python, одного из самых популярных языков программирования.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/python" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по JavaScript</h3>
                    <p class="mt-2 text-gray-200">
                        Откройте для себя возможности JavaScript для веб-разработки и создания интерактивных сайтов.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/javascript" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по C#</h3>
                    <p class="mt-2 text-gray-200">
                        Освойте язык C# для разработки приложений и игр на платформе .NET.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/csharp" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по Docker</h3>
                    <p class="mt-2 text-gray-200">
                        Научитесь работать с контейнерами Docker и оптимизируйте развертывание приложений.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/docker" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по Git</h3>
                    <p class="mt-2 text-gray-200">
                        Освойте Git для эффективного управления версиями кода и совместной разработки.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/git" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>

                <div class="bg-white/10 backdrop-blur-lg glass border border-gray-100 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow">
                    <h3 class="text-xl font-bold text-gray-200">Курс по PostgreSQL</h3>
                    <p class="mt-2 text-gray-200">
                        Изучите PostgreSQL, мощную реляционную СУБД, для работы с базами данных.
                    </p>
                    <div class="mt-4">
                        <a href="/courses/postgresql" class="text-accent-pink">
                            Узнать больше &rarr;
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Раздел отзывов -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-200 text-center">
                Что говорят наши ученики
            </h2>
            <div class="mt-10 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="bg-white/10 backdrop-blur-lg glass rounded-lg shadow-lg p-6">
                        <blockquote class="text-gray-200 italic">
                            "Эта платформа изменила мой подход к обучению. Курсы увлекательные, а сообщество поддерживающее!"
                        </blockquote>
                        <p class="mt-4 font-bold text-accent-pink">- Ученик @i</p>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Раздел часто задаваемых вопросов -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-gray-900 text-center">
                Часто задаваемые вопросы
            </h2>
            <div class="mt-8 space-y-4">
                @foreach (var faq in new[]
                {
                new { question = "Как зарегистрироваться?", answer = "Чтобы зарегистрироваться, нажмите на кнопку 'Регистрация' в верхнем меню." },
                new { question = "Как начать учиться?", answer = "Просто выберите курс на главной странице и зарегистрируйтесь для начала." },
                new { question = "Как получить сертификат?", answer = "После завершения курса, вам будет выдан сертификат, который можно скачать." }
                })
                {
                    <details class="bg-white/10 backdrop-blur-lg glass p-4 rounded-lg group shadow-lg">
                        <summary class="font-semibold text-lg text-white cursor-pointer">
                            @faq.question
                        </summary>
                        <p class="mt-2 text-gray-200 group-open:max-h-screen max-h-0 overflow-hidden transition-all duration-700 ease-in-out opacity-0 group-open:opacity-100">
                            @faq.answer
                        </p>
                    </details>
                }
            </div>
        </div>
    </section>

    <!-- Раздел новостей -->
    <section class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-extrabold text-white text-center">
                Последние новости
            </h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 mt-6">
                <!-- Две карточки в ряд начиная с sm -->
                @foreach (var news in Model)
                {
                    <a href="@Url.Action("Details", "News", new { id = news.Id })" class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-all">
                        <div class="relative">
                            @if (news.ImageData != null)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(news.ImageData)" alt="Новость" class="rounded-lg shadow-md w-full h-full object-cover" />
                            }
                            else
                            {
                                <p class="text-gray-500 mt-2">Нет изображения</p>
                            }
                        </div>
                        <div class="mt-4">
                            <h2 class="text-xl font-semibold text-gray-800 truncate">@news.Title</h2>
                            <p class="text-sm text-gray-500 mt-2">@news.CreatedAt.ToString("dd.MM.yyyy")</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </section>
</div>