@using Hexagon.Models.Courses
@model LessonModel
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title;
    var progressPercent = 40; // Пример прогресса
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

    <!-- Прогресс-бар -->
    <div class="mb-6">
        <label for="progress" class="block text-sm font-medium text-gray-700 mb-1">Прогресс курса</label>
        <div class="w-full bg-gray-200 rounded-full h-4">
            <div class="bg-indigo-600 h-4 rounded-full transition-all duration-300" style="width: @progressPercent%"></div>
        </div>
        <p class="text-sm text-gray-600 mt-1">@progressPercent%</p>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md">
        <div class="relative">
            @if (Model.ImageData != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.ImageData)" alt="Новость" class="rounded-lg shadow-md w-full h-full object-cover" />
            }
            else
            {
                <p class="text-gray-500 mt-2">Нет изображения</p>
            }
        </div>

        <h2 class="text-3xl font-bold text-gray-600 mb-6">@Model.Title</h2>

        <div class="mt-4">
            <p class="text-gray-600 mt-4">@Model.Discription</p>
        </div>

        <!-- Кнопки: слева и справа, обе индиго -->
        <div class="mt-6 flex justify-between items-center">
            <a href="/teaching" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg shadow">
                Вернуться назад
            </a>
            <a href="/start-studying" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg shadow">
                Закончить урок и перейти далее
            </a>
        </div>
    </div>
</div>
